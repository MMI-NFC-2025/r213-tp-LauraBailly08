---
import { getOffres } from '../../../js/backend.mjs';
import Layout from '../../../layouts/Layout.astro';
import OffreCard from '../../../components/OffreCard.astro';


const { surface } = Astro.params;

const offres = await getOffres();

const offresFiltrees = offres.filter(offre => offre.Surface > Number(surface));
---

<Layout titre={`Maisons de plus de ${surface} m²`}>
    <div class="p-8 font-cute">
        <h1 class="text-3xl font-bold text-rose-500 mb-6">
            Résultats pour une surface supérieure à {surface} m²
        </h1>

        {offresFiltrees.length > 0 ? (
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {offresFiltrees.map((offre) => (
                    <OffreCard offre={offre} />
                ))}
            </div>
        ) : (
            <p class="text-rose-400">Aucune offre ne correspond à cette surface.</p>
        )}

        <a href="/offres" class="mt-8 inline-block text-rose-400 underline">
            &larr; Retour à toutes les offres
        </a>
    </div>
</Layout>